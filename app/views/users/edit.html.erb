 <h1 class="top-name">編集ページ</h1>


<section class="section">
  <div class="container">
    <%= form_with model: @user do |f| %>
      <div class="field">
        <i class="fas fa fa-user"></i>
        <%= f.label :name ,class: "filed__title"%><br />
        <%= f.text_field :name,:placeholder=> "name" ,class: "filed__input"%>
      </div>

      <div class="field">
        <i class="fas fa fa-envelope"></i>
        <%= f.label :email ,class: "filed__title"%><br />
        <%= f.email_field :email,:placeholder=> "mail",class: "filed__input" %>
      </div>

      <div class="field">
        <i class="fas fa fa-id-card"></i>
        <%= f.label :profile , "プロフィール",class: "filed__title"%><br />
        <%= f.text_area :profile,:placeholder=> "profile",class: "filed__area" %>
      </div>

      <div class="field">
        <i class="fas fa fa-id-card"></i>
        <%= f.label :profile_image , "プロフィール画像",class: "filed__title"%><br />
        <%= f.attachment_field :profile_image ,class: "filed__input" %>
      </div>



      <div class="actions">
        <%= f.submit "編集完了", class: "filed__btn" %>
      </div>
    <% end %>
  </div>
</section>

